# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Google Sheets CMS (Menu Pages)
# Keep secrets out of git; set these in `.env.local` in development and Vercel env vars in production.
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id
GOOGLE_SHEETS_API_KEY=your-google-api-key
# Optional: override sheet/range if needed (defaults to first sheet title + A:Q)
# GOOGLE_SHEETS_RANGE=Sheet1!A:Q

# Google Maps API (for geocoding postal codes and addresses)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# n8n & Outreach Automation
# ============================================
# n8n webhook URLs for automation workflows
N8N_WEBHOOK_OUTREACH=https://your-n8n-instance.com/webhook/outreach
N8N_WEBHOOK_NEWSLETTER=https://your-n8n-instance.com/webhook/newsletter
N8N_WEBHOOK_CONTACT=https://your-n8n-instance.com/webhook/contact
N8N_WEBHOOK_RECIPE=https://your-n8n-instance.com/webhook/recipe
N8N_WEBHOOK_CAREER=https://your-n8n-instance.com/webhook/career

# Webhook secret for validating incoming callbacks from n8n
OUTREACH_WEBHOOK_SECRET=your-secure-webhook-secret

# Resend API for sending outreach emails (separate from transactional)
RESEND_API_KEY=re_xxxxxxxxxx
RESEND_OUTREACH_FROM=outreach@mail.bestfoodwhere.sg

# ============================================
# GoHighLevel CRM (Private Integration)
# ============================================
GHL_API_KEY=your-private-integration-api-key
GHL_LOCATION_ID=your-location-id
